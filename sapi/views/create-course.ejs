
<div class="col-lg-9">
    <form class="form-horizontal" action="/create-course" method="POST">
        <fieldset>

            <!-- Form Name -->
            <legend>创建课程</legend>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="courseName">课程名称</label>
                <div class="col-md-8">
                    <input id="courseName" name="courseName" type="text" placeholder="输入课程名称" class="form-control input-md" required="">
                </div>
            </div>

            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="couseDesc">课程简介</label>
                <div class="col-md-8">
                    <textarea class="form-control" id="courseDesc" name="couseDesc"  placeholder="输入课程简介" required></textarea>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="tutoremail">讲师电子邮件</label>
                <div class="col-md-4">
                    <input id="tutoremail" name="tutoremail" type="email" placeholder="tutor@example.com" class="form-control input-md">
                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="couseType">课程类别</label>
                <div class="col-md-4">
                    <select id="couseType" name="couseType" class="form-control">
                        <option value="1">Nodejs</option>
                        <option value="2">javascript</option>
                        <option value="">java</option>
                    </select>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="couseTags">课程标签</label>
                <div class="col-md-4">
                    <input id="couseTags" name="couseTags" type="text" placeholder="课程标签" class="form-control input-md">
                </div>
            </div>

            <!-- Button (Double) -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="submit"></label>
                <div class="col-md-8">
                    <button id="submit" type="submit" class="btn btn-success">创建课程</button>
                    <button id="reset" type="reset" class="btn btn-danger">重填</button>
                </div>
            </div>

        </fieldset>
    </form>
</div>